<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="547dp"
        android:layout_height="483dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/header"
        tools:ignore="MissingConstraints,ImageContrastCheck"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-11dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="Poppins"
        android:text="Медитации, \nсозданные для вас"
        android:textAlignment="center"
        android:textColor="#0F172A"
        android:textFontWeight="600"
        android:textSize="24dp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewTip"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="Poppins"
        android:text="Медитации становятся чем-то большим, подстраиваясь специально под ваши\nинтересы и уникальные особенности. \nНачните сейчас, это бесплатно."
        android:textAlignment="center"
        android:textColor="#64748B"
        android:textFontWeight="400"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#52B6DF"
        android:onClick="lets_start"
        android:text=""
        android:drawableLeft="@drawable/arrow_right"
        app:cornerRadius="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTip" />

</androidx.constraintlayout.widget.ConstraintLayout>